<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlkeWallet" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AlkeWallet" parent="Base.Theme.AlkeWallet" />



    <style name="boton_celeste">
        <item name="android:textColor">@color/blanco</item>
        <item name="backgroundTint">@color/celeste</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/jua</item>
        <item name="cornerRadius">10dp</item>

    </style>

    <style name="imput_layout_azul">
        <item name="android:textColorHint">@color/celesteoscuro</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/jua</item>
    </style>

    <style name="imput_layout_verde">
        <item name="android:textColorHint">@color/verde</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/jua</item>
    </style>

    <style name="boton_verde">
        <item name="android:textColor">@color/negro</item>
        <item name="backgroundTint">@color/verde</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/jua</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="boton_profile">
        <item name="android:textColor">@color/negro</item>
        <item name="backgroundTint">@color/plomo</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/jua</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="cornerRadius">10dp</item>

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/celeste</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logosvg</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AlkeWallet</item>
    </style>





</resources>